<div class="container">
  <div class="row">
    <h1>Create Club</h1>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-4 col-sm-offset-3 col-md-offset-4">
      <%= simple_form_for @club do |f| %>
        <%= f.input :name %>
        <%= f.input :street %>
        <%= f.input :city %>
        <%= f.input :postcode %>
        <%= f.input :country %>
        <%= f.input :street_no %>
        <%= f.input :description %>
        <%= f.input :user_id, :as => :hidden, input_html: { value: current_user.id } %>
        <%= f.button :submit, "Create Club", html_option = { class: 'btn btn-primary'} %>
      <% end %>
    </div>
  </div>
</div>
